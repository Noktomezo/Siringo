{
    "$schema": "https://json.schemastore.org/swcrc",
    "configFile": true,
    "isModule": true,
    "sourceRoot": "src",
    "module": {
        "type": "es6",
        "strict": false,
        "strictMode": true,
        "lazy": false,
        "noInterop": false
    },
    "jsc": {
        "keepClassNames": true,
        "baseUrl": "./",
        "paths": {
            "~/src/*": ["src/*"]
        },
        "parser": {
            "dynamicImport": true,
            "classProperty": true,
            "classPrivateProperty": true,
            "importMeta": true,
            "privateMethod": true,
            "importAssertions": true
        }
    }
}
